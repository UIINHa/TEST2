for (int i = 0; i < 32; ++i) {
    DWORD entityPtr = 0;
    ReadProcessMemory(hProc, (LPCVOID)(0x50F4F8 + i * 4), &entityPtr, sizeof(DWORD), NULL);

    std::cout << "entity[" << i << "] = 0x" << std::hex << entityPtr << std::dec << "\n";

    if (entityPtr != 0) {
        int hp = 0;
        ReadProcessMemory(hProc, (LPCVOID)(entityPtr + 0xF8), &hp, sizeof(int), NULL);
        std::cout << "  HP: " << hp << "\n";
    }
}
